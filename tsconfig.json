{
  "compilerOptions": {
    "strictNullChecks": true,
    //"typeRoots": ["types", "node_modules/@types"],
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2020"
    ],
    "module": "ES2015",
    "target": "es5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src"
  ]
}
